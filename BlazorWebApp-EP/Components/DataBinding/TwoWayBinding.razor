@rendermode InteractiveServer

<h2>Two Way Binding</h2>
<br />

<label for="nameInput">Defina uma classe CSS:</label>
<!-- oninput eh enquanto eu digito -->
<input id="nameInput" @bind="classe" @bind:event="oninput" 
       autocomplete="off"
       role="presentation" />
<br />

<p>A classe definida é: @classe</p>

<a class="@classe" href="#">Um link simples</a>

@code {
    private string classe = "";
}